{
  "manifest_version": 2,
  "name": "Instergater (A Instagram Limiter)",
  "version": "1.3",
  "description": "Your Gate-Keeping Instagram Extension",
  "browser_specific_settings": {
    "gecko": {
      "id": "instergater@lin8x.dev",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["none"],
        "optional": []
      }
    }
  },
  "permissions": [
    "storage",
    "downloads",
    "tabs",
    "*://www.instagram.com/*",
    "*://*.cdninstagram.com/*",
    "*://*.fbcdn.net/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "assets/logo.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.instagram.com/*"],
      "js": ["browser-polyfill.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "inject.js",
    "browser-polyfill.js"
  ]
}
